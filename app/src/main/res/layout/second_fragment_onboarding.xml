<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".onboarding.FirstOnboardingFragment">

    <ImageView
        android:layout_width="425dp"
        android:layout_height="300dp"
        android:contentDescription="@string/equipment_description"
        android:scaleType="center"
        android:src="@drawable/ar" />

    <TextView
        android:id="@+id/textView"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Augmented Reality for Exercise"
        android:layout_marginTop="40dp"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        style="@style/TitleTextStyle"
        android:fontFamily="@font/cronus"
        android:layout_margin="10dp"
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Stay motivated with fun, interactive AR exercise programs designed to enhance your physical well-being."
        android:textSize="22sp" />

</LinearLayout>
